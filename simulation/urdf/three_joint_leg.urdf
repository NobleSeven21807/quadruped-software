<?xml version="1.0"?>
<robot name="three_joint_leg">

  <!-- Base link -->
  <link name="base">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <!-- Upper leg -->
  <link name="upper_leg">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.2"/>
      </geometry>
      <origin xyz="0 0 -0.1" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.2"/>
      </geometry>
      <origin xyz="0 0 -0.1" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001"/>
      <origin xyz="0 0 -0.1"/>
    </inertial>
  </link>

  <!-- Lower leg -->
  <link name="lower_leg">
    <visual>
      <geometry>
        <cylinder radius="0.015" length="0.2"/>
      </geometry>
      <origin xyz="0 0 -0.1" rpy="0 0 0"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.015" length="0.2"/>
      </geometry>
      <origin xyz="0 0 -0.1" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.08"/>
      <inertia ixx="0.0008" iyy="0.0008" izz="0.0008"/>
      <origin xyz="0 0 -0.1"/>
    </inertial>
  </link>

  <!-- Foot -->
  <link name="foot">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0005" iyy="0.0005" izz="0.0005"/>
    </inertial>
  </link>

  <!-- Abduction / adduction joint -->
  <joint name="hip_abduction" type="revolute">
    <parent link="base"/>
    <child link="upper_leg"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.0" upper="1.0" effort="5" velocity="2"/>
  </joint>

  <!-- Hip flexion / extension joint -->
  <joint name="hip_flexion" type="revolute">
    <parent link="upper_leg"/>
    <child link="lower_leg"/>
    <origin xyz="0 0 -0.2" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.5" upper="1.5" effort="5" velocity="2"/>
  </joint>

  <!-- Knee flexion / extension joint -->
  <joint name="knee_flexion" type="revolute">
    <parent link="lower_leg"/>
    <child link="foot"/>
    <origin xyz="0 0 -0.2" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="2.0" effort="5" velocity="2"/>
  </joint>

</robot>